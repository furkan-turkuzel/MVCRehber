@model MVC.UI.Models.AdresModelView
@{
    ViewBag.Title = "AdresDuzenle";
}

<h2>AdresDuzenle</h2>

<br /><br />
<form asp-controller="Adres" asp-action="YeniAdres" method="post">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x=>x.adresler.ID)
    <div class="input-group">
        <div class="input-group-addon" id="txtAdrestanim">
            Adres Tanım
        </div>
        @Html.TextBoxFor(x => x.adresler.AdresTanim, new { @class = "form-control", placeholder = "Adres Tanım", aria_describedby = "txtAdrestanim" })
    </div>
    <br />
    <div class="input-group">
        <div class="input-group-addon" id="ddlKisiler">
            Kişi
        </div>
        @Html.DropDownListFor(x => x.adresler.KisiID, (List<SelectListItem>)ViewBag.kisiler, new { @class = "form-control", aria_describedby = "ddlKisiler" })
    </div>
    <br />
    <div class="input-group">
        <input type="submit" class="btn btn-success" value="Kaydet" />
    </div>
</form>